<div style = "margin:65px">
<p id="notice"><%= notice %></p>

<h4>Picks</h4>
<br>
<%= @count %>
<br><br>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @picks.each do |pick| %>
      <tr>
        <td><%= pick.first_name %></td>
        <td><%= pick.last_name %></td>
        <td><%= link_to 'Show', pick %></td>
        <td><%= link_to 'Edit', edit_pick_path(pick) %></td>
        <td><%= link_to 'Destroy', pick, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<!-- Import CSV -->

<h4> Import Picks via CSV </h4>
<br>
<%= form_tag import_picks_path, multipart: true do %>

<%= file_field_tag :file %>
<br>
<br>
<%= submit_tag "Import CSV List" %>

<% end %>
<br>
<br>


<%= link_to 'New Pick', new_pick_path %>
</div>