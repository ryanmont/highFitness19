<p id="notice"><%= notice %></p>

<h1>Tables</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Middle name</th>
      <th>Last name</th>
      <th>Date of birth</th>
      <th>Street address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip code</th>
      <th>Mobile phone</th>
      <th>Email</th>
      <th>Preferred airline</th>
      <th>Frequent flyer number</th>
      <th>Preferred flight date</th>
      <th>Preferred departure time period</th>
      <th>Preferred departure airport code</th>
      <th>Seat preference</th>
      <th>Food allergies</th>
      <th>Number of beds requested</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tables.each do |table| %>
      <tr>
        <td><%= table.first_name %></td>
        <td><%= table.middle_name %></td>
        <td><%= table.last_name %></td>
        <td><%= table.date_of_birth %></td>
        <td><%= table.street_address %></td>
        <td><%= table.city %></td>
        <td><%= table.state %></td>
        <td><%= table.zip_code %></td>
        <td><%= table.mobile_phone %></td>
        <td><%= table.email %></td>
        <td><%= table.preferred_airline %></td>
        <td><%= table.frequent_flyer_number %></td>
        <td><%= table.preferred_flight_date %></td>
        <td><%= table.preferred_departure_time_period %></td>
        <td><%= table.preferred_departure_airport_code %></td>
        <td><%= table.seat_preference %></td>
        <td><%= table.food_allergies %></td>
        <td><%= table.number_of_beds_requested %></td>
        <td><%= link_to 'Show', table %></td>
        <td><%= link_to 'Edit', edit_table_path(table) %></td>
        <td><%= link_to 'Destroy', table, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

